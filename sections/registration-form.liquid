
<div class="sixteen columns clearfix">
  <h2 class="title text-center">{{ 'customer.register.title' | t }}</h1>
  <p  class="text-center">{{'customer.register.sub_title' | t }}</p>
</div>

<div class="section clearfix">
  <div class="container">
    <div class="content">
      <br class="clear" />
      <div id="customer">
        <!-- Create Customer -->
        <div id="create-customer">
  
          {% form 'create_customer' %}
            {{ form.errors | default_errors }}
  
            <div id="first_name" class="clearfix large_form">
              <input type="text" placeholder="{{ 'customer.register.first_name' | t }}" value="" name="customer[first_name]" id="first_name" class="large" size="30" />
            </div>
  
            <div id="last_name" class="clearfix large_form">
              <input type="text" value="" placeholder="{{ 'customer.register.last_name' | t }}" name="customer[last_name]" id="last_name" class="large" size="30" />
            </div>
  
            <div id="email" class="clearfix large_form">
              <input type="email" value="" placeholder="{{ 'customer.register.email' | t }}" name="customer[email]" id="email" class="large" size="30" />
            </div>
  
            <div id="password" class="clearfix large_form">
              <input type="password" value="" placeholder="{{ 'customer.register.password' | t }}" name="customer[password]" id="password" class="large password" size="30" />
            </div>
  
            {% if section.settings.text %}
              <p class="intro">{% include 'icon-pack' with icon: 'question' %}{{ section.settings.text | strip_html }}</p>
            {% endif %}
  
            <div class="acceptsMarketing">
              <div class="checkbox">
                <input type="checkbox" id="customer[accepts_marketing]" name="customer[accepts_marketing]">
                <label for="customer[accepts_marketing]">{{ 'customer.register.accepts_marketing' | t }}</label>
              </div>
            </div>
  
            <div class="action_bottom">
              <input class="button button-full action_button" type="submit" value="{{ 'customer.register.sign_up' | t }}" />
              <p class="text-center" style="padding-top: 8px;">
                {{ 'customer.register.returning_customer_label' | t }} <a href="{{ routes.account_login_url }}" id="customer_login_link">{{ 'customer.register.sign_in_html' | t }}</a>
              </p>
            </div>
  
          {% endform %}
        </div><!-- /#create-customer -->
      </div>
    </div>
  </div>
  
</div>

{% schema %}
  {
    "name": "Register",
    "class": "account-section",
    "settings": [
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }
    ]
  }
{% endschema %}
