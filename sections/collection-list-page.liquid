{% comment %}
** List of collections - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign collections_per_row = section.settings.frontpage_collections_per_row %}

<div class="container">
  {% if section.blocks.size > 0 %}
    {% if section.settings.title != blank %}
      <div class="sixteen columns center">
      <p class="heading" style="color: {{section.settings.title_color}}">
          {{ section.settings.title }}
      </p>
      </div>
    {% endif %}
    <div class="sixteen columns">
      <div class="section list-collection-wrapper">
        {% if section.settings.collection_style == 'grid' %}
          <div class="list-collections clearfix equal-columns--outside-trim equal-columns--clear">
        {% else %}
          <div class="container js-collection-slider homepage-collection-slider full-width--true {% if collections_per_row == 2 or collections_per_row == 4 or collections_per_row == 6 %}even-num-slides{% endif %} featured-collection__products">
        {% endif %}
        {% if section.settings.collection_style == 'grid' %}
            {% render 'collection-grid' %}
        {% else %}
          {% render 'collection-slider' %}
        {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
</div>

{% if section.settings.align_height == true %}
  <style>
    .collection-list-section .list-collection-wrapper img {
      max-height: {{ section.settings.collection_height }}px;
    }
  </style>
{% endif %}

{% schema %}
{
  "name": "Collection list",
  "class": "collection-list-section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Collection list"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "align_height",
      "label": "Align height of collection images"
    },
    {
      "type": "range",
      "id": "collection_height",
      "label": "Collection image height",
      "min": 150,
      "max": 400,
      "step": 10,
      "default": 200,
      "unit": "px"
    },
    {
      "type": "radio",
      "id": "collection_style",
      "label": "Collection layout",
      "default": "grid",
      "options": [
        {
          "value": "slider",
          "label": "Slider"
        },
        {
          "value": "grid",
          "label": "Grid"
        }
      ]
    },
    {
      "type": "range",
      "id": "frontpage_collections_per_row",
      "label": "Collections per row",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "feature_collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "header",
          "content": "Additional link"
        },
        {
          "type": "checkbox",
          "id": "additional_link_status",
          "label": "Addition link enable"
        },
        {
          "type": "text",
          "id": "link_title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "add_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Collection list",
    "category": "Collection",
    "settings": {

    },
    "blocks": [
      {
        "type": "collection"
      },
      {
        "type": "collection"
      },
      {
        "type": "collection"
      }
    ]
  }]
}
{% endschema %}
