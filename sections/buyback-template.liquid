{% if section.settings.title != blank %}
    {% assign title = section.settings.title %}
{% else %}
    {% assign title = page.title %}
{% endif %}

{% include 'heading-banner' with 
    image: section.settings.image,
    mobile_image: section.settings.banner_mobile_image,
    sub_title: section.settings.sub_title,
    title: title,
    desc: section.settings.desc,
    wide: section.settings.wide_display,
%}

<div class="container">
    <div class="sixteen column main-content">
        
        
        <div class="stepwizard">
            <div class="stepwizard-row setup-panel">
                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-1">
            <div class="twelve medium-down--one-whole column offset-by-two content">
                <div class="heading-content column">
                    {{section.settings.content_desc}}
                </div>
                <div class="content-block border-box bread-cta bread-section bread-style column">
                    <div class="one-third medium-down--one-whole column  text-center">
                        <div class="icon">
                            {{section.settings.icon_1}}
                        </div>
                        <div class="info text-center">
                            <p class="title text-center">{{section.settings.icon_title_1}}</p>
                            {{section.settings.icon_desc_1}}
                        </div>
                    </div>
                    <div class="one-third medium-down--one-whole column  text-center">
                        <div class="icon">
                           {{section.settings.icon_2}}
                        </div>
                        <div class="info text-center">
                            <p class="title">{{section.settings.icon_title_2}}</p>
                            {{section.settings.icon_desc_2}}
                        </div>
                    </div>
                    <div class="one-third medium-down--one-whole column  text-center">
                        <div class="icon">
                            {{section.settings.icon_3}}
                        </div>
                        <div class="info text-center">
                            <p class="title">{{section.settings.icon_title_3}}</p>
                            {{section.settings.icon_desc_3}}
                        </div>
                    </div>
                </div>
                {{section.settings.bottom_text}}
                <a class="button nextBtn center">Get Started</a>
            </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="twelve medium-down--one-whole column offset-by-two content">
                {formbuilder:33223}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Page template",
    "class": "page-section finance-two-template",
    "settings": [
        {
            "type": "checkbox",
            "id": "wide_display",
            "label": "Wide display"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "image_picker",
            "id": "banner_mobile_image",
            "label": "Mobile banner image"
        },
        {
            "type": "text",
            "id": "sub_title",
            "label": "Sub title",
            "default": "customer help"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "desc",
            "label": "Description",
            "default": "<p>Clear, transparent terms. Fair rates. No prepayment penalties.</p>"
        },
        {
            "type": "header",
            "content": "content"
        },
        {
            "type": "richtext",
            "id": "content_desc",
            "label": "Description"
        },
        {
            "type": "header",
            "content": "description block"
        },
        {
            "type": "html",
            "id": "icon_1",
            "label": "Icon"
        },
        {
            "type": "text",
            "id": "icon_title_1",
            "label": "Title 1",
            "default": "Affordable Monthly Plans"
        },
        {
            "type": "richtext",
            "id": "icon_desc_1",
            "label": "Description 1",
            "default": "<p>Pay for your order over 12, 24, or 36 months at competitive interest rates*.</p>"
        },
        {
            "type": "header",
            "content": "description block"
        },
        {
            "type": "html",
            "id": "icon_2",
            "label": "Icon"
        },
        {
            "type": "text",
            "id": "icon_title_2",
            "label": "Title",
            "default": "No Prepayment Penalties"
        },
        {
            "type": "richtext",
            "id": "icon_desc_2",
            "label": "Description",
            "default": "<p>Pay for your purchase with monthly payments and prepay at any time without penalty.</p>"
        },
        {
            "type": "header",
            "content": "description block"
        },
        {
            "type": "html",
            "id": "icon_3",
            "label": "Icon"
        },
        {
            "type": "text",
            "id": "icon_title_3",
            "label": "Title",
            "default": "Quick and Easy Application"
        },
        {
            "type": "richtext",
            "id": "icon_desc_3",
            "label": "Description",
            "default": "<p>Get a decision in seconds with no obligation to buy. Checking your rate won't affect your credit score.</p>"
        },
        {
            "type": "header",
            "content": "description block"
        },
        {
            "type": "header",
            "content": "Bottom Descroiption block"
        },
        {
            "type": "richtext",
            "id": "bottom_text",
            "label": "Bottom text"
        }
    ]
}
{% endschema %}
