{% comment %}
** Gallery - homepage partial **
- Draggable section
- Uses blocks

{% endcomment %}

{% assign images_per_row = settings.grid-size %}

{% if section.settings.wide_display == false %}
<div class="container">
  <div class="sixteen columns">
{% endif %}
<div  id="gallery_section-{{section.id}}"
      class=" gallery-section
              gallery-{{ section.settings.gallery_type }}
              {% if section.settings.wide_display %}
                gallery-full
              {% endif %}">

 {% if section.settings.title != blank %}
  <div class="container">
    <div class="sixteen columns">
      <h2 class="title center">
        {% if section.settings.link != blank %}
          <a target="_blank" href="{{section.settings.link}}"> {{ section.settings.title | escape }}</a>
        {% else %}
          {{ section.settings.title | escape }}
        {% endif %}
      </h2>
      {{ section.settings.sub_title }}
    </div>
  </div>
  {% endif %}

  <div class="gallery-break"></div>
  <div id="stamped-reviews-widget" data-widget-type="instagram-feed" data-hover-text="View Post" data-take="8"></div>
  </div>

{% if section.settings.wide_display == false %}
  </div>
</div>
{% endif %}





{% schema %}
  {
    "name": "Instagram",
    "class": "instagram-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "wide_display",
        "label": "Wide display"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Gallery"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Heading link"
      },
      {
        "type": "richtext",
        "id": "sub_title",
        "label": "Sub title"
      }
    ],
     "presets": [
      {
        "name": "Instagram",
        "category": "Social"
      }
    ]
  }
{% endschema %}
