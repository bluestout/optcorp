{% comment %}
  Snippet can be used in section or block
  eg. {% include 'include-featured-text' %}
{% endcomment %}

{% comment %}Assign object as block or section{% endcomment %}
{% if type == 'block' %}
  {% assign object = block %}
{% else %}
  {% assign object = section %}
{% endif %}

{% assign id = object.id %}
{% comment %}Featured text settings {% endcomment %}
{% assign image = object.settings.image %}
{% assign title = object.settings.title %}
{% assign content = object.settings.content %}
{% assign text_size = object.settings.text_size %}
{% assign text_alignment = object.settings.text_alignment %}
{% assign button_label = object.settings.button_label %}
{% assign button_link = object.settings.button_link %}

<div class="container">
  <div class="sixteen columns">
    <div class="rich-text__content section clearfix">
      
      {% if title != blank %}
        <h2 class="rich-text__heading heading center">
          {{ title }}
        </h2>
      {% endif %}

        <div class="rich-text__text {{ text_size }} medium-down--hide">
          {% if content != blank %}
            {{ content }}
          {% endif %}
          
          {% render 'image-element',
                  image: image.src,
                  alt: image.alt,
                  stretch_width: true
          %}
        </div>
        <div class="rich-text__text {{ text_size }} hide medium-down--show">
          {% render 'image-element',
                  image: image.src,
                  alt: image.alt,
                  stretch_width: true
          %}
          {% if content != blank %}
            {{ content | strip_html }}
          {% endif %}
        </div>
    </div>
  </div>
</div>
