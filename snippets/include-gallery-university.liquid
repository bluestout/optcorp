      {% if block.settings.detail_image_1 %}
        <div class="gallery-cell">
          <a href="{{block.settings.detail_link_1}}">
            {% render 'image-element',
                    image: block.settings.detail_image_1,
                    alt: block.settings.caption
            %}
            <div class="info">
              {{block.settings.detail_icon_1}}
              <p class="title">{{block.settings.detail_title_1}}</p>
