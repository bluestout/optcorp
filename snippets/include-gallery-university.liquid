    {% case block.settings.item_per_row %}
      {% when 1 %}
        {% assign cls = 'one-whole medium-down--one-whole' %}
      {% when 2 %}
        {% assign cls = 'one-half medium-down--one-whole' %}
      {% when 3 %}
        {% assign cls = 'one-third medium-down--one-half' %}
      {% when 4 %}
        {% assign cls = 'two-eighths medium-down--one-half' %}
    {% endcase %}
